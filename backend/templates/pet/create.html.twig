{% extends 'base.html.twig' %}

{% block title %}Create New Pet!{% endblock %}
{% block body %}

<div class="mx-auto bg-white p-8 rounded-lg shadow-lg">
        <div x-data="formWizard()" x-init="init()">
            <form @submit.prevent="submitForm" class="space-y-8">
                <!-- Step 1 -->
                <div x-show="step === 1">
                    <h2 class="text-2xl font-semibold text-center">Step 1: Personal Information</h2>
                    <div class="mt-4">
                        <label for="first_name" class="block text-sm font-medium text-gray-700">First Name</label>
                        <input type="text" id="first_name" name="first_name" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" x-model="form.first_name" required>
                    </div>
                    <div class="mt-4">
                        <label for="last_name" class="block text-sm font-medium text-gray-700">Last Name</label>
                        <input type="text" id="last_name" name="last_name" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" x-model="form.last_name" required>
                    </div>
                </div>

                <!-- Step 2 -->
                <div x-show="step === 2">
                    <h2 class="text-2xl font-semibold text-center">Step 2: Contact Information</h2>
                    <div class="mt-4">
                        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email" id="email" name="email" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" x-model="form.email" required>
                    </div>
                    <div class="mt-4">
                        <label for="phone" class="block text-sm font-medium text-gray-700">Phone</label>
                        <input type="text" id="phone" name="phone" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" x-model="form.phone" required>
                    </div>
                </div>

                <!-- Step 3 -->
                <div x-show="step === 3">
                    <h2 class="text-2xl font-semibold text-center">Step 3: Address Information</h2>
                    <div class="mt-4">
                        <label for="address" class="block text-sm font-medium text-gray-700">Address</label>
                        <input type="text" id="address" name="address" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" x-model="form.address" required>
                    </div>
                    <div class="mt-4">
                        <label for="city" class="block text-sm font-medium text-gray-700">City</label>
                        <input type="text" id="city" name="city" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" x-model="form.city" required>
                    </div>
                </div>

                <!-- Navigation Buttons -->
                <div class="flex justify-between">
                    <button type="button" x-show="step > 1" @click="prevStep()" class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md">Previous</button>
                    <button type="button" x-show="step < 3" @click="nextStep()" class="px-4 py-2 bg-blue-600 text-white rounded-md">Next</button>
                    <button type="submit" x-show="step === 3" class="px-4 py-2 bg-green-600 text-white rounded-md">Submit</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
<script>
function formWizard() {
        return {
            step: 1,
            form: {
                first_name: '',
                last_name: '',
                email: '',
                phone: '',
                address: '',
                city: ''
            },
            init() {
                // Initialization logic if needed
            },
            nextStep() {
                if (this.step < 3) this.step++;
            },
            prevStep() {
                if (this.step > 1) this.step--;
            },
            submitForm() {
                console.log(this.form);
                alert('Form submitted!');
            }
        };
    }
</script>
{% endblock %}